@{
    Layout = "~/Views/Shared/_LayoutSeguranca.cshtml";
}
<div class="container d-flex flex-column">
    <div class="row vh-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
            <div class="d-table-cell align-middle">

                <div class="text-center mt-4">
                    <h1 class="h2">Bem-Vindo</h1>
                    <p class="lead">
                        Autenticação
                    </p>
                </div>

                <div class="card" style="background-color: #000000e3;color: white;font-weight: bold;">
                    <div class="card-body">
                        <div class="m-sm-4">
                            <div class="text-center">
                                <img src="~/imagens/logo_prata.png" alt="Charles Hall" class="img-fluid rounded-circle" width="132" height="132" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">CPF</label>
                                <input type="text" class="form-control form-control-lg" id="cpf" name="cpf" placeholder="Digite seu CPF" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Senha</label>
                                <input class="form-control form-control-lg" type="password" id="senha" name="senha" placeholder="Digite sua Senha" />
                                <small>
                                </small>
                            </div>
                            <div class="text-center mt-3">
                                <button style="background-color: #808080a1;
    filter: brightness(1);
    color: white;
    border: 1px solid white;
    font-size: 16px;" onclick="login()" class="btn btn-lg btn-primary">Entrar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section JS{
    <script src="~/js/autenticacao/index.js"></script>
}